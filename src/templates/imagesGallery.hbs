{{#each this}}
    <li class="gallery-item" id="{{id}}">
        <div class="gallery-item__container gallery-container" id="gallery-container">
             <img 
                class="gallery-item__img" 
                src="{{webformatURL}}" 
                data-lightbox-img="{{largeImageURL}}" 
                alt="{{tags}}"
                loading="lazy"
                height="200px"
            />

            <div class="gallery-stats">
                <p class="gallery-item__stats">
                    <i class="material-icons stats-icon">thumb_up</i>
                    <span class="stats-value">{{likes}}</span>
                </p>
                <p class="gallery-item__stats">
                    <i class="material-icons stats-icon">visibility</i>
                    <span class="stats-value">{{views}}</span>
                </p>
                <p class="gallery-item__stats">
                    <i class="material-icons stats-icon">comment</i>
                    <span class="stats-value">{{comments}}</span>
                </p>
                <p class="gallery-item__stats">
                    <i class="material-icons stats-icon">cloud_download</i>
                    <span class="stats-value">{{downloads}}</span>
                </p>
            </div>
        </div>
    </li>
{{/each}}



